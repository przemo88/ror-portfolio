<div>
    <% if flash[:success] %>
    <div class="alert alert-success link"><%= flash[:success] %></div>
    <% end %>
</div>

<div class="container">
    <div class="row show">

        <div class="col-lg-6 col-12 col-sm-12 offset-lg-3 show_title"><%= @page.name %></div>

        <div class="col-lg-6 col-12 col-sm-12 offset-lg-3"><%= link_to image_tag(@page.image), page_path if @page.image.attached? %></div>

        <div class="col-lg-6 col-12 col-sm-12 offset-lg-3">
            
            <%= link_to fa_icon("github-square 2x"), "http://#{@page.github}" %>
            <%= link_to fa_icon("camera-retro 2x"), "http://#{@page.website}" %>    

        </div>

        <div class="col-lg-6 col-12 col-sm-12 offset-lg-3">
            <%= link_to "Powrót", pages_path %>
            <%= link_to 'Usuń', @page, method: :delete, data: { confirm: 'Chcesz usunąć ?' } %>
            <%= link_to "Edytuj", edit_page_path(@page) %>
            <div class="col-lg-12 col-12 col-sm-12 desc_style"><%= @page.description %>
            </div>

        </div>

    </div>
</div>
       