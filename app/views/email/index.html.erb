<h1 class="col-lg-4 offset-lg-4 title">Formularz kontaktowy</h1>

<%= form_for @data, url: 'email#index', remote: true do |f| %>


  <% if @data.errors.any? %>
    <div>
      <h2 class="link sample_title">
       Liczba błędów:  <%= @data.errors.count %> 
      </h2>
      <ul class="alert alert-danger link">
        <% @data.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">

    <div class="col-lg-8 offset-lg-2">
      <%= f.label "Imię", class: "col-lg-4 offset-lg-4 form_text" %>
      <%= f.text_field :name, class: "col-lg-12" %>
    </div>

    <div class="col-lg-8 offset-lg-2">
      <%= f.label "Email", class: "col-lg-4 offset-lg-4 form_text" %>
      <%= f.text_field :email, class: "col-lg-12" %>
    </div>

    <div class="col-lg-8 offset-lg-2">
      <%= f.label "wiadomość", class: "col-lg-4 offset-lg-4 form_text" %>
      <%= f.text_area(:message, cols: 40, rows: 10, class: "col-lg-12") %>
    </div>

      <div class="col-lg-8 offset-lg-2">
      <%= f.submit "Wyślij", class: "col-lg-2 mt-50 offset-lg-5" %>
  </div>

      </div>
    </div>

  <% end %>