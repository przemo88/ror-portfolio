<h1 class="col-lg-4 offset-lg-4 title">Formularz kontaktowy</h1>

<div>
    <% if flash[:success] %>
    <div class="alert alert-success link"><%= flash[:success] %></div>
    <% end %>
</div>

<%= form_for @data, url: 'email#index', remote: true do |f| %>
<div class="container">
    <div class="row">

        <div class="col-lg-8 offset-lg-2">
            <%= f.label :name, class: "col-lg-4 offset-lg-4 form_text"%>
            <%= f.text_field :name, required: true, class: "col-lg-12" %>
        </div>

        <div class="col-lg-8 offset-lg-2">
            <%= f.label "Email", class: "col-lg-4 offset-lg-4 form_text" %>
            <%= f.text_field :email, required: true, class: "col-lg-12", type: 'email' %>
        </div>

        <div class="col-lg-8 offset-lg-2">
            <%= f.label "wiadomość", class: "col-lg-4 offset-lg-4 form_text" %>
            <%= f.text_area(:message, cols: 40, rows: 10, required: true, class: "col-lg-12") %>
        </div>

        <div class="col-lg-8 offset-lg-2">
            <%= f.submit "Wyślij", class: "col-lg-2 mt-50 offset-lg-5" %>
        </div>

    </div>
</div>

<% end %>